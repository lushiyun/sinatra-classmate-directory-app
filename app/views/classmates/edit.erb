<h3>Edit your classmate</h3>

<form action="/classmates/<%= @classmate.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">

  <label for="classmate[name]">Name:</label>
  <input type="text" name="classmate[name]" value="<%= @classmate.name %>">
  <br>
  <label for="classmate[birthday]">Birthday: </label>
  <input type="date" name="classmate[birthday]" value="<%= @classmate.birthday %>">

  <p>
    Edit courses you have together
    <% @courses.each do |course| %>
      <input type="checkbox" name="classmate[course_ids][]" value="<%= course.id %>" <%= 'checked' if @classmate.courses.include?(course) %>><%= course.title %><br>
    <% end %>
  </p>

  <p>
    Add a new course
    <label for="course[title]">Name: </label>
    <input type="text" name="course[title]">

    <label for="course[professor]">Professor: </label>
    <input type="text" name="course[professor]">

    <label for="course[teaching_assistant]">Teaching Assistant: </label>
    <input type="text" name="course[teaching_assistant]">
  </p>

  <br>

  <input type="submit" value="Edit">

</form>

<a href="/classmates">Index</a>